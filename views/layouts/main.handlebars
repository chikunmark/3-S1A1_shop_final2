<html lang='en'>

<head>
  <meta charset='UTF-8' />
  <meta http-equiv='X-UA-Compatible' content='IE=edge' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <title>Restaurant List</title>
  <link rel='shortcut icon'
    href='https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png'
    type='image/x-icon' />
  <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
  <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.1/css/all.min.css' />
  <link rel='stylesheet' href='/stylesheets/{{cssName}}.css' />
</head>

<body>
  <header>
    <!-- navigation -->
    <nav class='navbar navbar-expand-sm navbar-light bg-light'>
      <div class='container-fluid'>
        <a class='navbar-brand' href='/'>
          <img src='https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png'
            width='30' height='30' class='d-inline-block align-top' alt='我的餐廳清單' />
          {{#if isAuthenticated}}{{user.name}}
          {{else}}我{{/if}}的餐廳清單
        </a>
        {{#if isAuthenticated}}
        <a href="/users/logout" class="btn btn-outline-secondary">Logout</a>
        {{else}}
        <a href="/users/login" class="btn btn-outline-secondary">Login</a>
        {{/if}}
        </a>
        <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav'
          aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation'>
          <span class='navbar-toggler-icon'></span>
        </button>

        <div class='collapse navbar-collapse' id='navbarNav'>
          <ul class='navbar-nav'>
            <li class='nav-item'>
              <a class='nav-link active' aria-current='page' href='/newshop'>
                <button type='button' class='btn btn-outline-info'>新增店家</button>
              </a>
            </li>
          </ul>
        </div>

      </div>
    </nav>

    <div class='banner'></div>
  </header>

  {{{body}}}

  {{! load JS }}
  <script src='/javascripts/popper.js'></script>
  <script src='/javascripts/bootstrap.js'> </script>
</body>

</html>